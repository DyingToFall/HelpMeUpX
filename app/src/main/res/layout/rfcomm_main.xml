<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.dyingtofall.helpmeupx.BluetoothRfCommFrag">


    <Button
        android:id="@+id/button1"
        android:layout_width="152dp"
        android:layout_height="48dp"
        android:text="BLUETOOTH ON"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="8dp" />

    <Button
        android:id="@+id/button2"
        android:layout_width="157dp"
        android:layout_height="48dp"
        android:text="BLUETOOTH OFF"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="7dp"
        app:layout_constraintRight_toRightOf="parent"
        tools:layout_editor_absoluteX="220dp" />

    <Button
        android:id="@+id/button3"
        android:layout_width="154dp"
        android:layout_height="47dp"
        android:text="SEARCH"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/button2"
        tools:layout_editor_absoluteX="222dp" />

    <Button
        android:id="@+id/button4"
        android:layout_width="152dp"
        android:layout_height="47dp"
        android:text="DISCOVERABLE"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/button1" />


    <ListView
        android:id="@+id/listView2"
        android:layout_width="336dp"
        android:layout_height="155dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="7dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/button4"></ListView>

    <ListView
        android:id="@+id/listView3"
        android:layout_width="330dp"
        android:layout_height="152dp"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/listView2"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="8dp"
        tools:layout_editor_absoluteY="327dp"
        tools:layout_editor_absoluteX="42dp"></ListView>


</android.support.constraint.ConstraintLayout>
