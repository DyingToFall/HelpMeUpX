<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/settings_sec_header"
        android:text="@string/settings_header"
        android:layout_width="match_parent"
        android:layout_height="50sp"
        android:layout_gravity="center_horizontal"
        android:layout_weight="1"
        android:textAlignment="center"
        android:textSize="24sp"
        android:textStyle="bold">

    </TextView>

    <TextView
        android:id="@+id/settings_text"
        android:text="@string/settings_set1_text"
        android:layout_width="match_parent"
        android:layout_height="50sp"
        android:layout_marginLeft="25sp"
        android:layout_weight="1"
        android:textSize="20sp"
        android:textStyle="bold">

    </TextView>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="300sp"
        android:orientation="horizontal">

   <LinearLayout
       android:layout_width="100sp"
       android:layout_height="300sp">


    <RadioGroup
        android:id="@+id/radio_settings_group"
        android:layout_width="50sp"
        android:layout_height="300sp">


        <RadioButton
        android:id="@+id/radio_button_1"
        android:layout_row="0"
        android:layout_column="0"
        android:layout_width="50sp"
        android:layout_height="50sp"
        />


        <RadioButton
            android:id="@+id/radio_button_2"
            android:layout_row="1"
            android:layout_column="0"
            android:layout_width="50sp"
            android:layout_height="50sp" />

        <RadioButton
            android:id="@+id/radio_button_3"
            android:layout_row="2"
            android:layout_column="0"
            android:layout_width="50sp"
            android:layout_height="50sp"
            />

        <RadioButton
            android:id="@+id/radio_button_4"
            android:layout_row="3"
            android:layout_column="0"
            android:layout_width="50sp"
            android:layout_height="50sp"
            />

        <RadioButton
            android:id="@+id/radio_button_5"
            android:layout_row="4"
            android:layout_column="0"
            android:layout_width="50sp"
            android:layout_height="50sp"
            />

        <RadioButton
            android:id="@+id/radio_button_6"
            android:layout_row="5"
            android:layout_column="0"
            android:layout_width="50sp"
            android:layout_height="50sp"
            />

    </RadioGroup>

   </LinearLayout>


    <LinearLayout
        android:layout_width="400sp"
        android:layout_height="300sp"
        android:orientation="vertical">

    <TextView
        android:id="@+id/radio_select_1"
        android:text="Alarm 1 (default)"
        android:layout_width="400sp"
        android:layout_height="50sp"
        android:layout_marginTop="10sp"
        android:textSize="24sp"
        android:textStyle="bold"
        android:layout_gravity="left|top"
        />

        <TextView
            android:id="@+id/radio_select_2"
            android:text="Alarm 2"
            android:layout_width="match_parent"
            android:layout_height="50sp"
            android:textSize="24sp"
            android:textStyle="bold"
            android:layout_gravity="left|top"/>

        <TextView
        android:id="@+id/radio_select_3"
        android:text="Alarm 3"
        android:layout_width="400sp"
        android:layout_height="50sp"
        android:textSize="24sp"
        android:textStyle="bold"
        android:layout_gravity="left|top"
        />

        <TextView
            android:id="@+id/radio_select_4"
            android:text="Alarm 4"
            android:layout_width="400sp"
            android:layout_height="50sp"
            android:textSize="24sp"
            android:textStyle="bold"
            android:layout_gravity="left|top"
            />

        <TextView
            android:id="@+id/radio_select_5"
            android:text="Alarm 5"
            android:layout_width="400sp"
            android:layout_height="50sp"
            android:textSize="24sp"
            android:textStyle="bold"
            android:layout_gravity="left|top"
            />

        <TextView
            android:id="@+id/radio_select_6"
            android:text="Alarm 6"
            android:layout_width="400sp"
            android:layout_height="50sp"
            android:textSize="24sp"
            android:textStyle="bold"
            android:layout_gravity="left|top"
            />

        </LinearLayout>

    </LinearLayout>

    <Button
        android:id="@+id/settings_okay_button"
        android:layout_width="200sp"
        android:layout_height="40sp"
        android:background="@drawable/fancybutton"
        android:text="OK"
        android:textColor="@color/colorGreen"
        android:layout_gravity="center_horizontal"
        android:layout_weight="0"
        android:layout_marginBottom="25sp"
         />
    
</LinearLayout>