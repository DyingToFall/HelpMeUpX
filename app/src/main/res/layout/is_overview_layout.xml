<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fancydialogbackground">

<TextView
android:id="@+id/overviewHeaderText"
android:layout_gravity="center_horizontal"
android:textSize="28sp"
    android:textAlignment="center"
android:text="@string/is_intro_header"
android:textStyle="bold"
    android:shadowColor="@color/colorBlack"
    android:shadowDx="5"
    android:shadowDy="5"
    android:shadowRadius="0.1"
android:textColor="@color/colorRed"
    android:layout_width="400sp"
    android:layout_height="200sp"
    app:layout_constraintTop_toTopOf="parent"
    android:layout_marginTop="25sp"
    android:layout_marginLeft="25sp"
    app:layout_constraintLeft_toLeftOf="parent"
    android:layout_marginRight="25sp"
    app:layout_constraintRight_toRightOf="parent"
    />

<TextView
android:id="@+id/overviewMainText"
android:layout_width="wrap_content"
android:layout_height="wrap_content"
android:textSize="20sp"
android:text="@string/is_intro_maintext"
    android:textColor="@color/colorBlack"
    android:layout_marginLeft="50sp"
    app:layout_constraintLeft_toLeftOf="parent"
    app:layout_constraintTop_toBottomOf="@id/overviewHeaderText"
    android:layout_marginBottom="200sp"
    android:layout_marginRight="50sp"
    app:layout_constraintRight_toRightOf="parent"
    app:layout_constraintHorizontal_bias="0.484"
    app:layout_constraintBottom_toBottomOf="parent"
    android:paddingLeft="50sp"
    android:paddingRight="50sp"
    />

<Button
android:id="@+id/overviewButton"
android:layout_width="wrap_content"
android:layout_height="wrap_content"
        android:background="@drawable/fancybutton"
android:layout_gravity="center_horizontal"
android:text="Next"
    android:textColor="@color/colorGreen"
    android:layout_marginRight="25sp"
    app:layout_constraintRight_toRightOf="parent"
    android:layout_marginLeft="25sp"
    app:layout_constraintLeft_toLeftOf="parent"
    android:layout_marginTop="40sp"
    app:layout_constraintTop_toBottomOf="@+id/overviewMainText"
    app:layout_constraintBottom_toBottomOf="parent"
    />

</android.support.constraint.ConstraintLayout>